<% content_for :header do %>
  <script type="text/javascript" src="https://gumroad.com/js/gumroad.js"></script>
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
<% end %>

<div class="container">
  <div class="row header-margins">
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12 app-name">Mogo Chat</div>
      </div>
      <div class="row">
        <div class="col-md-12 app-description">opensource team chat application</div>
      </div>
    </div>
    <div class="col-md-8 nav">.col-md-1</div>
  </div>

  <div class="row">
    <div class="col-md-7">Screenshot</div>
    <div class="col-md-5">

      <div class="row">
        <div class="col-md-12">

          <div class="row">
            <div class="col-md-12">
              <p class="social-buttons">
                <a href="https://twitter.com/share"
                   data-count="none"
                   data-size="large"
                   data-text="MogoChat - opensource team chat application http://getmogochat.com by @HashNuke"
                   class="twitter-share-button" data-lang="en">Tweet</a>

                <iframe
                  src="http://ghbtns.com/github-btn.html?user=HashNuke&repo=mogo-chat&type=watch&count=true&size=large"
                  height="30"
                  width="170"
                  frameborder="0"
                  scrolling="0"
                  style="width:170px; height: 30px;" allowTransparency="true"></iframe>
              </p>
            </div>
          </div>


          <div class="row contribution">
            <div class="col-md-12">
              <h3>Contribute noodle money</h3>
              <a href="https://gum.co/demo?wanted=true" class="gumroad-button">Contribute ~!</a>
              <hr/>
            </div>

            <div class="col-md-12">
              <div class="row">
                <div class="col-md-6">
                  <h4>Top contributors</h4>
                  <ol>
                    <% @top_contributors.each do |contributor| %>
                      <li><%= contributor.name %></li>
                    <% end %>
                  </ol>
                </div>
                <div class="col-md-6">
                  <h4>Contributors by browser</h4>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <div class="row footer">
    <div class="col-md-4">
      <p>
        <h4>Looking for a developer?</h4>
      </p>
    </div>

    <div class="col-md-4">
      <h4>Built using</h4>
      <div class="row">
        <div class="col-md-3">
          <%= image_tag "elixir-logo.png", class: "elixir-logo" %>
        </div>
        <div class="col-md-3">
          <%= image_tag "emberjs-logo.png", class: "emberjs-logo" %>
        </div>
        <div class="col-md-4">
          <%= image_tag "postgresql-logo.png", class: "postgresql-logo" %> <span class="tool-name">PostgreSQL</span>
        </div>
      </div>
    </div>

  </div>

</div>
